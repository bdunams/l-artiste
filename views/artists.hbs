{{#if success_msg}}
            
    <div class="alert alert-success">{success_msg}}</div>

{{/if}}

<div class="col-md-12">
  <h1>{{artist.name}}</h1>
  <hr>

  <h4 class="">Bio: {{artist.bio}}</h4>


  <h3>{{artist.name}}'s Artworks</h3>
</div>


<div class="row">
  <hr>
  {{#each artworks}}

    <div class="col-xs-12 col-md-3">
      {{#if this.media}}
        <a href="/artworks/{{this.id}}">
          <img style="max-width:280px" src="{{this.media}}">
        </a>
      {{else}}
        <a href="/artworks/{{this.id}}">
          <img style="max-width:280px" src="http://via.placeholder.com/280x320">
        </a>
      {{/if}}

      <br>
      <h4 class="text-center">
       {{this.title}} 
      </h4>
      <br>

    </div>

  {{/each}}

  <br>
  <br>
  <br>
</div>